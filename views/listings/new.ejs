<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-1">
    <br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter a sweet title" type="text" class="form-control" required/>
            <div class="valid-feedback">Title looks great</div>
            <div class="invalid-feedback">title not entered</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"></textarea>
            <!-- <div class="invalid-feedback">Write a short description</div> -->
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image link</label>
            <input name="listing[image]" placeholder="enter image URL/link" type="text" class="form-control"/>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
                <div class="invalid-feedback">price not entered</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
                <div class="invalid-feedback">country not entered</div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
            <div class="invalid-feedback">Location not entered</div>
        </div>
        
        <br />
        <button class="btn btn-dark add-btn">Add</button>
        <br><br />
    </form>
    </div>
</div>

